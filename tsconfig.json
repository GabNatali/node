{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  
    "rootDir": "./src",                                
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,             
    "outDir": "dist",                               
    "strict": true,                                    
    "skipLibCheck": true,
    "typeRoots": ["./src/shared/types", "./node_modules/@types"]
                                
  },
  "include": ["src"]
}
